{
  "name": "nzws-website",
  "version": "1.0.0",
  "description": "nzws.me",
  "repository": "https://github.com/yuzulabo/nzws.me.git",
  "author": "nzws <github@nzws.me>",
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "lint:css": "stylelint **/*.scss",
    "lint:js": "eslint \"**/*.js\"",
    "lint:html": "htmlhint src/**/*.html",
    "lint": "npm-run-all lint:* -s",
    "fmt:css": "stylelint --fix **/*.scss && prettier --write \"**/*.{css,scss}\"",
    "fmt:js": "prettier --write \"**/*.js\"",
    "fmt:md": "prettier --write \"**/*.md\"",
    "fmt:json": "prettier --write \"**/*.json\"",
    "fmt": "npm-run-all fmt:* -s",
    "build": "parcel build src/index.html -d public/ --no-source-maps",
    "watch": "parcel src/index.html -d public/"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "htmlhint": "^0.11.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "sass": "^1.21.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.9.0",
    "bootstrap": "^4.3.1",
    "turbolinks": "^5.2.0"
  }
}
