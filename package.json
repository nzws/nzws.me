    "@types/remove-markdown": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@yuzulabo/eslint-config": "~1",
    "babel-eslint": "^10.0.3",
    "babel-plugin-styled-components": "^1.13.3",
    "cross-env": "^7.0.3",
