  "private": true,
  "scripts": {
    "lint:prettier": "prettier --check --ignore-path .gitignore .",
    "lint:js": "eslint --cache --ignore-path .gitignore \"**/*.{js,ts,tsx}\"",
    "lint:ts-next": "tsc",
    "lint:ts-node": "tsc --project ./tsconfig.node.json",
    "lint": "npm-run-all lint:* -s",
    "format-all": "prettier --write --ignore-path .gitignore .",
    "format:prettier": "pretty-quick",
    "format:js": "eslint --cache --ignore-path .gitignore --fix \"**/*.{js,ts,tsx}\"",
    "format": "npm-run-all format:* -s",
    "build": "yarn generate-index && next build",
    "generate-index": "ts-node --project ./tsconfig.node.json ./scripts/generate-index.ts",
    "dev": "next",
    "start": "next start",
    "analyze": "cross-env ANALYZE=true next build"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@next/bundle-analyzer": "^10.0.5",
    "@nzws/prettier-config": "~1.0.1",
    "@types/gtag.js": "^0.0.4",
    "@types/node": "^14.14.20",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/remove-markdown": "^0.1.1",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.13.0",
    "@yuzulabo/eslint-config": "~1",
    "babel-eslint": "^10.0.3",
    "babel-plugin-styled-components": "^1.12.0",
    "cross-env": "^7.0.3",
    "eslint": "~7.17.0",
    "eslint-plugin-react": "^7.22.0",
    "npm-run-all": "~4",
    "prettier": "~2.2.1",
    "pretty-quick": "^3.1.0",
    "raw-loader": "^4.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@icons-pack/react-simple-icons": "^3.13.0",
    "gray-matter": "^4.0.2",
    "highlight.js": "^10.5.0",
    "next": "^10.0.5",
    "nextjs-progressbar": "^0.0.7",
    "polished": "^4.0.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-feather": "^2.0.9",
    "rehype-stringify": "^8.0.0",
    "remark-highlight.js": "^6.0.0",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^8.0.0",
    "remove-markdown": "^0.3.0",
    "ress": "^3.0.0",
    "styled-components": "^5.2.1",
    "styled-media-query": "^2.1.2",
    "unified": "^9.2.0"
  },
  "prettier": "@nzws/prettier-config"
