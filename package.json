    "raw-loader": "^4.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@icons-pack/react-simple-icons": "^4.6.1",
    "got": "^11.8.3",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.3.1",
